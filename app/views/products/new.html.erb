  <ul>
  <% @product.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<h2> Use this form for adding a new product </h2>

<%= form_tag '/products', method: :post do %>
<div>
  <%= label_tag :name %>
  <%= text_field_tag :name, @product ? @product.name : nil%>
</div>

<div>
  <%= label_tag :price %>
  <%= text_field_tag :price, @product ? @product.price : nil %>
</div>

<div>
  <%= label_tag :description %>
  <%= text_field_tag :description, @product ? @product.description : nil %>
</div>

<div>
  <%= submit_tag "New Product" %>
</div>

<% end %>
